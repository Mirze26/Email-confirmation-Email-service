@model CourseCreateVM

@{
    ViewData["Title"] = "Create";
}

<div style="padding-left:170px" class="container my-5">

    <h2 style="color:darkcyan; text-align:center;" class="mt-3">Create</h2>

    <form class="form-sample" asp-action="Create" method="post" enctype="multipart/form-data">
      

        <div class="form-group">
            <label style="color:darkred" class="mt-2">Name </label>
            <input class="form-control" id="customFile" asp-for="Name" placeholder="Name" />   
            <span class="text-danger" asp-validation-for="Name"></span>

        </div>


        <div class="form-group">

            <label style="color:darkred" class="mt-2">Description </label>
            <textarea class="form-control" id="category-text" asp-for="Description" rows="5"></textarea>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>


        <div class="form-group">


            <label style="color:darkred" class="mt-2">Price</label>
            <input type="number" step=".01" class="form-control" id="customFile" asp-for="Price" placeholder="Price" />   
            <span class="text-danger" asp-validation-for="Price"></span>

        </div>

        <div class="form-group">
            <label style="color:darkred" class="mt-2">Count</label>
            <input class="form-control" id="customFile" asp-for="CountSale" placeholder="Count" />    
            <span class="text-danger" asp-validation-for="CountSale"></span>

        </div>

        <div class="form-group">
            <label style="color:darkred" class="mt-5">Category</label>
            <select class="form-control" id="customFile" asp-for="AuthorId" asp-items="@ViewBag.authories"></select>

           

        </div>



        <div class="form-group">

            <label style="color:darkred" class="mt-2">Image </label>
            <input class="form-control" id="customFile" asp-for="Photos" />
            <span class="text-danger" asp-validation-for="Photos"></span>
        </div>


        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>

    </form>
</div>

@section Scripts{


    <partial name="_ValidationScriptsPartial" />
    <script src="~/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("category-text")  


    </script>

}


